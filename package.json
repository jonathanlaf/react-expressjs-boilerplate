{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently --names \"API,REACT\" -c \"bgBlue.bold,bgMagenta.bold\"  --allow-restart  --restart-tries 0 \"npm run start:express\" \"cd ./client && npm run start:react\" ",
    "start:express": "cross-env PORT=3001 NODE_ENV=development nodemon --inspect ./bin/www",
    "start:react": "cd ./client && npm run start:react",
    "test:lint": "npm run test:lint:css && npm run test:lint:js",
    "test:lint:fix": "npm run test:lint:css:fix && npm run test:lint:js:fix",
    "test:lint:js": "eslint .",
    "test:lint:css": "cd ./client && stylelint \"**/*.css\"",
    "test:lint:js:fix": "eslint --fix .",
    "test:lint:css:fix": "cd ./client && stylelint --fix \"**/*.css\""
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "concurrently": "^3.5.1",
    "cookie-parser": "~1.4.3",
    "cross-env": "^5.1.4",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "morgan": "~1.9.0",
    "nodemon": "^1.17.3"
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ]
  },
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0"
  }
}
